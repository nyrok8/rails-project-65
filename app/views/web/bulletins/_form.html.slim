= simple_form_for(bulletin) do |f|
  = f.input :title,
    input_html: { class: 'form-control' },
    required: true

  = f.input :description,
    as: :text,
    input_html: { class: 'form-control', rows: 4 },
    required: true

  = f.association :category,
    input_html: { class: 'form-control' },
    required: true

  = f.input :image,
    as: :file,
    input_html: { class: 'form-control' },
    required: true

  = f.submit class: 'btn btn-primary'
